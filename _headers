/*
  # Content Security Policy (Basic but Effective)
  # - default-src 'self': Only allow content from your own domain by default
  # - script-src 'self' 'unsafe-inline' https://code.tidio.co: Allow local scripts, inline scripts (needed for reveal/menu), and Tidio
  # - style-src 'self' 'unsafe-inline' https://fonts.googleapis.com: Allow local styles, inline styles, and Google Fonts
  # - font-src 'self' https://fonts.gstatic.com: Allow Google Fonts
  # - img-src 'self' data: https: Allow local images, data URIs, and external images via HTTPS
  # - frame-ancestors 'none': Prevent clickjacking (same as X-Frame-Options: DENY)
  Content-Security-Policy: default-src 'self'; script-src 'self' 'unsafe-inline' https://code.tidio.co; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; img-src 'self' data: https:; frame-ancestors 'none'; require-trusted-types-for 'script'; upgrade-insecure-requests;

  # Strict-Transport-Security (HSTS)
  # Enforce HTTPS for 1 year, including subdomains, and allow preloading in browsers.
  Strict-Transport-Security: max-age=31536000; includeSubDomains; preload

  # Cross-Origin Options
  # COOP protects against Spectre-style attacks by isolating the browsing context.
  Cross-Origin-Opener-Policy: same-origin
  
  # Prevent MIME-type sniffing
  X-Content-Type-Options: nosniff
  
  # Legacy Frame Control (for older browsers)
  X-Frame-Options: DENY
  
  # Control referrer information
  Referrer-Policy: strict-origin-when-cross-origin
