/*
  # High-Grade Content Security Policy (Hardenend)
  # - script-src: We use 'strict-dynamic' + SHA-256 hash for main.js. 
  #   This trusts main.js and everything it loads (like Tidio) without needing 'unsafe-inline' or brittle allowlists.
  # - style-src: We allow 'unsafe-inline' ONLY for styles, as Tidio widget requires it for dynamic styling. 
  #   All our own styles have been refactored into styles.css.
  # - connect-src: Added Tidio's required API and WebSocket endpoints.
  Content-Security-Policy: default-src 'self'; script-src 'self' 'sha256-UNMcI3F/5RV2tLAM9jWzYmU/FP2xETHPmEyESErRVoI=' 'strict-dynamic' https://code.tidio.co; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; img-src 'self' data: https:; frame-ancestors 'none'; connect-src 'self' https://*.tidio.co wss://socket.tidio.co https://*.tidiochat.com; require-trusted-types-for 'script'; upgrade-insecure-requests;

  # Strict-Transport-Security (HSTS)
  # Enforce HTTPS for 1 year, including subdomains, and allow preloading in browsers.
  Strict-Transport-Security: max-age=31536000; includeSubDomains; preload

  # Cross-Origin Options
  # COOP protects against Spectre-style attacks by isolating the browsing context.
  Cross-Origin-Opener-Policy: same-origin
  
  # Prevent MIME-type sniffing
  X-Content-Type-Options: nosniff
  
  # Prevent Clickjacking (Same-origin framing allowed if needed, but DENY is safer)
  X-Frame-Options: DENY
  
  # Referrer Policy
  Referrer-Policy: strict-origin-when-cross-origin
